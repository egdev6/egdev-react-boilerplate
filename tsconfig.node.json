{
  "compilerOptions": {
    "target": "ES2024",           // Establece el target a ES2024
    "module": "Node16",         // Usa CommonJS porque es lo que usa Node.js
    "moduleResolution": "node16",   // Resuelve módulos como lo hace Node.js
    "lib": ["es2024"],            // Incluir las características de ES2024
    "strict": true,
    "composite": true,
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts", "src/mocks/*.ts", "src/mocks/**/*.json"]
}
