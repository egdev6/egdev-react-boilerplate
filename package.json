{
  "name": "egdev-react-boilerplate",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "optimize": "vite optimize",
    "analyze": "vite build --mode production --reportCompressedSize",
    "clean": "rm -rf dist node_modules pnpm-lock.yaml package-lock.json && npm cache clean --force",
    "rebuild": "pnpm run clean && pnpm install",
    "biome:all": "biome check --write .",
    "biome:staged": "biome check --write --staged --verbose",
    "pre-commit": "pnpm run biome:staged && npx tsc && git add -A",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-menubar": "1.1.6",
    "@radix-ui/react-slot": "1.1.2",
    "@tanstack/react-query": "5.71.5",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "axios": "1.8.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.487.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "7.4.1",
    "react-router-dom": "7.4.1",
    "tailwind-merge": "3.1.0",
    "tw-animate-css": "1.2.5",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@evilmartians/lefthook": "1.11.6",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/addon-themes": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/manager-api": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/react-vite": "8.6.12",
    "@storybook/test": "8.6.12",
    "@storybook/theming": "8.6.12",
    "@tailwindcss/vite": "4.1.2",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/react-router-dom": "5.3.3",
    "@vitejs/plugin-react": "4.3.4",
    "@vitejs/plugin-react-swc": "3.8.1",
    "lefthook": "1.11.6",
    "path": "0.12.7",
    "storybook": "8.6.12",
    "tailwindcss": "4.1.2",
    "typescript": "5.8.2",
    "vite": "6.2.4",
    "vite-plugin-mock-simple": "1.0.3",
    "vite-plugin-svgr": "4.3.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  }
}
